{
  "name": "lctrs/dbal-specification",
  "type": "library",
  "description": "Specification pattern for DBAL repositories",
  "homepage": "https://github.com/Lctrs/DBAL-Specification",
  "license": "MIT",
  "authors": [
    {
      "name": "Jérôme Parmentier",
      "email": "jerome@prmntr.me"
    }
  ],
  "require": {
    "php": "^7.3.0",
    "doctrine/dbal": "^2.12.1"
  },
  "require-dev": {
    "doctrine/coding-standard": "^8.2.0",
    "ergebnis/composer-normalize": "^2.9.0",
    "ergebnis/license": "^1.1.0",
    "ergebnis/test-util": "^1.4.0",
    "infection/infection": "^0.18.2",
    "phpstan/extension-installer": "^1.0.5",
    "phpstan/phpstan": "^0.12.57",
    "phpstan/phpstan-deprecation-rules": "^0.12.5",
    "phpstan/phpstan-phpunit": "^0.12.16",
    "phpstan/phpstan-strict-rules": "^0.12.5",
    "phpunit/phpunit": "^9.4.3",
    "psalm/plugin-phpunit": "^0.12.2",
    "vimeo/psalm": "^3.18.2",
    "weirdan/doctrine-psalm-plugin": "^0.11.3"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Lctrs\\DBALSpecification\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lctrs\\DBALSpecification\\Test\\": "test/"
    }
  },
  "support": {
    "issues": "https://github.com/Lctrs/DBAL-Specification/issues",
    "source": "https://github.com/Lctrs/DBAL-Specification"
  }
}
